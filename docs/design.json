{
  "design_system": {
    "name": "Newton Design System",
    "version": "1.1.0",
    "description": "UI/UX design system for Newton Asset Management application",
    "foundation": {
      "component_library": "Radix UI + shadcn/ui",
      "styling": "Tailwind CSS v4",
      "icons": "Lucide React",
      "fonts": {
        "primary": "Geist Sans",
        "monospace": "Geist Mono"
      },
      "motion": "Framer Motion"
    },
    "visual_style": {
      "theme": "Glass Morphism",
      "principles": ["Translucent surfaces layered over vibrant gradients", "Soft inner shadows and lifted silhouettes to create depth", "Subtle motion and responsive hover states that reinforce interactivity", "Maintain Newton brand colors across light and dark contexts"],
      "implementation_notes": "Use Tailwind CSS v4 utilities for blur, opacity, gradients, and backdrop filters while retaining existing OKLCH color tokens. Panels float above gradient backdrops with layered z-index tokens.",
      "background_layer": "Full-screen radial gradient combining cool blue tones with subtle noise overlay"
    }
  },
  "color_palette": {
    "color_space": "OKLCH",
    "themes": {
      "light": {
        "background": {
          "default": "oklch(1 0 0)",
          "description": "Pure white"
        },
        "foreground": {
          "default": "oklch(0.145 0 0)",
          "description": "Dark gray text"
        },
        "primary": {
          "default": "oklch(0.205 0 0)",
          "foreground": "oklch(0.985 0 0)",
          "description": "Dark gray primary with white text"
        },
        "secondary": {
          "default": "oklch(0.97 0 0)",
          "foreground": "oklch(0.205 0 0)",
          "description": "Light gray secondary"
        },
        "accent": {
          "default": "oklch(0.97 0 0)",
          "foreground": "oklch(0.205 0 0)"
        },
        "muted": {
          "default": "oklch(0.97 0 0)",
          "foreground": "oklch(0.556 0 0)"
        },
        "destructive": {
          "default": "oklch(0.577 0.245 27.325)",
          "description": "Red for dangerous actions"
        },
        "border": "oklch(0.922 0 0)",
        "input": "oklch(0.922 0 0)",
        "ring": "oklch(0.708 0 0)",
        "glass_layers": {
          "soft": {
            "fill": "oklch(1 0 0 / 0.78)",
            "border": "oklch(0.922 0 0 / 0.55)",
            "shadow": "0 28px 70px -40px rgb(15 15 15 / 0.28)"
          },
          "strong": {
            "fill": "oklch(0.97 0 0 / 0.72)",
            "border": "oklch(0.708 0 0 / 0.35)",
            "shadow": "0 36px 80px -38px rgb(15 15 15 / 0.32)"
          },
          "floating": {
            "fill": "oklch(1 0 0 / 0.68)",
            "border": "oklch(0.922 0 0 / 0.45)",
            "shadow": "0 42px 120px -60px rgb(15 15 15 / 0.4)"
          }
        },
        "gradient_backdrops": {
          "primary_surface": "linear-gradient(140deg, oklch(0.97 0 0 / 0.85) 0%, oklch(0.922 0 0 / 0.6) 35%, oklch(0.205 0 0 / 0.45) 100%)",
          "accent_ripple": "radial-gradient(circle at 20% 20%, oklch(0.97 0 0 / 0.65), oklch(0.205 0 0 / 0.25) 70%)"
        }
      },
      "dark": {
        "background": {
          "default": "oklch(0.145 0 0)",
          "description": "Dark gray background"
        },
        "foreground": {
          "default": "oklch(0.985 0 0)",
          "description": "Light gray text"
        },
        "primary": {
          "default": "oklch(0.922 0 0)",
          "foreground": "oklch(0.205 0 0)"
        },
        "secondary": {
          "default": "oklch(0.269 0 0)",
          "foreground": "oklch(0.985 0 0)"
        },
        "accent": {
          "default": "oklch(0.269 0 0)",
          "foreground": "oklch(0.985 0 0)"
        },
        "muted": {
          "default": "oklch(0.269 0 0)",
          "foreground": "oklch(0.708 0 0)"
        },
        "destructive": {
          "default": "oklch(0.704 0.191 22.216)",
          "description": "Red for dangerous actions"
        },
        "border": "oklch(1 0 0 / 10%)",
        "input": "oklch(1 0 0 / 15%)",
        "ring": "oklch(0.556 0 0)",
        "glass_layers": {
          "soft": {
            "fill": "oklch(0.145 0 0 / 0.68)",
            "border": "oklch(1 0 0 / 0.12)",
            "shadow": "0 32px 90px -45px rgb(0 0 0 / 0.65)"
          },
          "strong": {
            "fill": "oklch(0.269 0 0 / 0.55)",
            "border": "oklch(0.985 0 0 / 0.25)",
            "shadow": "0 36px 110px -52px rgb(0 0 0 / 0.7)"
          },
          "floating": {
            "fill": "oklch(0.205 0 0 / 0.45)",
            "border": "oklch(0.985 0 0 / 0.18)",
            "shadow": "0 48px 140px -70px rgb(0 0 0 / 0.75)"
          }
        },
        "gradient_backdrops": {
          "primary_surface": "linear-gradient(150deg, oklch(0.205 0 0 / 0.5) 0%, oklch(0.269 0 0 / 0.6) 45%, oklch(0.985 0 0 / 0.25) 100%)",
          "accent_ripple": "radial-gradient(circle at 70% 20%, oklch(0.269 0 0 / 0.6), oklch(0.985 0 0 / 0.18) 80%)"
        }
      }
    },
    "semantic_colors": {
      "status": {
        "active": "green",
        "inactive": "gray",
        "pending": "yellow",
        "error": "red"
      },
      "chart_colors": ["chart-1", "chart-2", "chart-3", "chart-4", "chart-5"]
    }
  },
  "typography": {
    "font_families": {
      "sans": "var(--font-geist-sans)",
      "mono": "var(--font-geist-mono)"
    },
    "font_sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "font_weights": {
      "regular": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "line_heights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    },
    "heading_styles": {
      "page_title": {
        "size": "3xl",
        "weight": "bold",
        "tracking": "tight",
        "effects": "text-shadow: 0 8px 24px rgb(15 15 15 / 0.18)"
      },
      "section_title": {
        "size": "xl",
        "weight": "semibold",
        "effects": "backdrop-filter: blur(6px)"
      },
      "card_title": {
        "size": "lg",
        "weight": "semibold",
        "effects": "text-shadow: 0 4px 16px rgb(15 15 15 / 0.12)"
      },
      "dialog_title": {
        "size": "lg",
        "weight": "semibold",
        "effects": "letter-spacing: 0.01em"
      }
    }
  },
  "spacing": {
    "base_unit": "0.25rem",
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem"
    },
    "common_patterns": {
      "card_padding": "1.5rem",
      "modal_padding": "1.5rem",
      "form_gap": "1rem",
      "button_padding_x": "1rem",
      "button_padding_y": "0.5rem",
      "floating_layer_gap": "2.5rem"
    }
  },
  "border_radius": {
    "base": "0.625rem",
    "scale": {
      "none": "0",
      "sm": "calc(var(--radius) - 4px)",
      "md": "calc(var(--radius) - 2px)",
      "lg": "var(--radius)",
      "xl": "calc(var(--radius) + 4px)",
      "full": "9999px"
    },
    "component_defaults": {
      "button": "md",
      "card": "lg",
      "input": "md",
      "modal": "lg",
      "badge": "full",
      "panel": "xl"
    }
  },
  "shadows": {
    "xs": "inset 0 1px 0 0 rgb(255 255 255 / 0.35)",
    "sm": "0 12px 30px -22px rgb(15 15 15 / 0.25)",
    "md": "0 20px 48px -30px rgb(15 15 15 / 0.28)",
    "lg": "0 36px 80px -36px rgb(15 15 15 / 0.32)",
    "xl": "0 64px 120px -48px rgb(15 15 15 / 0.4)",
    "inner_soft": "inset 0 1px 0 0 rgb(255 255 255 / 0.2), inset 0 -12px 30px -24px rgb(15 15 15 / 0.28)",
    "inner_strong": "inset 0 2px 16px -12px rgb(0 0 0 / 0.45)",
    "hover_pop": "0 18px 60px -32px rgb(15 15 15 / 0.35)"
  },
  "effects": {
    "backdrop_blurs": {
      "sm": "12px",
      "md": "18px",
      "lg": "28px"
    },
    "surface_depth": {
      "layer_offsets": ["0px", "24px", "48px"],
      "z_index_scale": {
        "base": 0,
        "floating": 10,
        "frosted_panel": 20,
        "modal": 30
      }
    },
    "border_styles": {
      "light": {
        "base": "1px solid oklch(0.922 0 0 / 0.55)",
        "hover": "1px solid oklch(0.922 0 0 / 0.75)"
      },
      "dark": {
        "base": "1px solid oklch(0.985 0 0 / 0.18)",
        "hover": "1px solid oklch(0.985 0 0 / 0.32)"
      }
    },
    "inner_glow": {
      "light": "inset 0 0 12px rgb(255 255 255 / 0.18)",
      "dark": "inset 0 0 16px rgb(255 255 255 / 0.12)"
    }
  },
  "components": {
    "button": {
      "surface": "glass_layers.strong",
      "variants": {
        "default": {
          "background": "linear-gradient(145deg, oklch(0.205 0 0 / 0.38) 0%, oklch(0.205 0 0 / 0.18) 100%)",
          "text": "primary (switches to white in dark mode)",
          "border": "effects.border_styles.light.base",
          "backdropFilter": "blur(12px)",
          "shadow": ["shadows.inner_soft", "shadows.sm"],
          "hover": {
            "background": "linear-gradient(145deg, oklch(0.205 0 0 / 0.45) 0%, oklch(0.205 0 0 / 0.22) 100%)",
            "border": "effects.border_styles.light.hover",
            "shadow": ["shadows.inner_soft", "shadows.hover_pop"]
          },
          "focus": {
            "ring": "ring-2 ring-offset-4 ring"
          },
          "active": {
            "shadow": "shadows.inner_strong"
          }
        },
        "secondary": {
          "background": "linear-gradient(145deg, oklch(0.97 0 0 / 0.65) 0%, oklch(0.922 0 0 / 0.45) 100%)",
          "text": "secondary-foreground",
          "border": "effects.border_styles.light.base",
          "backdropFilter": "blur(12px)",
          "shadow": "shadows.sm",
          "hover": {
            "background": "linear-gradient(145deg, oklch(0.97 0 0 / 0.72) 0%, oklch(0.922 0 0 / 0.55) 100%)",
            "border": "effects.border_styles.light.hover",
            "shadow": "shadows.hover_pop"
          }
        },
        "outline": {
          "border": "border-[var(--glass-border-soft)]",
          "text": "foreground",
          "background": "glass-surface",
          "backdropFilter": "blur(18px)",
          "hover": {
            "background": "hover:bg-[oklch(1_0_0_/_0.2)]",
            "border": "hover:border-[var(--glass-border-floating)]"
          },
          "implementation": "variant='outline' - clean glass surface with soft border and subtle hover border enhancement for better interactivity feedback",
          "note": "Outline buttons use minimal styling with a subtle border glow on hover (--glass-border-floating) to indicate interactivity. Do NOT apply gradient backgrounds or strong shadow effects like active tabs."
        },
        "ghost": {
          "text": "foreground",
          "background": "oklch(1 0 0 / 0.12)",
          "backdropFilter": "blur(12px)",
          "hover": {
            "background": "oklch(1 0 0 / 0.18)",
            "border": "effects.border_styles.light.hover"
          }
        },
        "destructive": {
          "background": "linear-gradient(145deg, oklch(0.577 0.245 27.325 / 0.6) 0%, oklch(0.577 0.245 27.325 / 0.4) 100%)",
          "text": "white",
          "border": "oklch(0.577 0.245 27.325 / 0.55)",
          "backdropFilter": "blur(12px)",
          "shadow": "shadows.sm",
          "hover": {
            "background": "linear-gradient(145deg, oklch(0.577 0.245 27.325 / 0.75) 0%, oklch(0.577 0.245 27.325 / 0.55) 100%)",
            "border": "oklch(0.577 0.245 27.325 / 0.75)",
            "shadow": "shadows.hover_pop"
          }
        },
        "link": {
          "text": "primary",
          "underline": true,
          "hover": {
            "text": "primary",
            "glow": "0 0 0 1px oklch(0.205 0 0 / 0.35)"
          }
        }
      },
      "sizes": {
        "sm": {
          "height": "36px",
          "padding": "0 12px",
          "fontSize": "sm"
        },
        "default": {
          "height": "40px",
          "padding": "0 16px",
          "fontSize": "sm"
        },
        "lg": {
          "height": "44px",
          "padding": "0 32px",
          "fontSize": "base"
        },
        "icon": {
          "height": "40px",
          "width": "40px"
        }
      },
      "states": {
        "hover": "accentuate border and drop shadow",
        "focus": "ring-2 ring-offset-2 with translucent offset surface",
        "active": "inner shadow for pressed effect",
        "disabled": "reduce opacity to 45% and remove glass shadow"
      }
    },
    "input": {
      "base": {
        "height": "40px",
        "padding": "0 12px",
        "border": "effects.border_styles.light.base",
        "borderRadius": "md",
        "fontSize": "sm",
        "background": "oklch(1 0 0 / 0.72)",
        "backdropFilter": "blur(18px)",
        "shadow": "shadows.inner_soft"
      },
      "states": {
        "focus": "ring-2 ring-primary shadow-md accentuated border",
        "error": "border-destructive text-destructive inner_strong shadow",
        "disabled": "opacity-50 cursor-not-allowed backdrop-filter blur(12px)"
      }
    },
    "card": {
      "base": {
        "background": "oklch(1 0 0 / 0.78)",
        "gradient": "color_palette.themes.light.gradient_backdrops.primary_surface",
        "borderRadius": "lg",
        "border": "effects.border_styles.light.base",
        "padding": "24px",
        "backdropFilter": "blur(18px)",
        "shadow": ["shadows.inner_soft", "shadows.lg"]
      },
      "hover": {
        "border": "effects.border_styles.light.hover",
        "shadow": ["shadows.inner_soft", "shadows.xl"],
        "transform": "translateY(-4px)"
      },
      "variants": {
        "elevated": {
          "shadow": "shadows.xl"
        },
        "outline": {
          "border": "effects.border_styles.light.base",
          "background": "oklch(1 0 0 / 0.6)"
        },
        "ghost": {
          "background": "transparent",
          "border": "effects.border_styles.light.base",
          "backdropFilter": "blur(12px)"
        }
      }
    },
    "modal": {
      "overlay": {
        "background": "linear-gradient(120deg, rgb(0 0 0 / 0.45) 0%, rgb(0 0 0 / 0.65) 100%)",
        "backdropFilter": "blur(16px)"
      },
      "content": {
        "background": "oklch(1 0 0 / 0.72)",
        "borderRadius": "lg",
        "maxWidth": "500px",
        "padding": "24px",
        "shadow": ["shadows.xl", "shadows.inner_soft"],
        "border": "effects.border_styles.light.base",
        "backdropFilter": "blur(24px)",
        "gradient": "color_palette.themes.light.gradient_backdrops.primary_surface"
      },
      "animations": {
        "enter": "framer-motion: { type: 'spring', damping: 18, stiffness: 220, opacity: [0, 1], scale: [0.95, 1], filter: ['blur(12px)', 'blur(0px)'] }",
        "exit": "framer-motion: { type: 'tween', duration: 0.25, opacity: [1, 0], scale: [1, 0.96], filter: ['blur(0px)', 'blur(16px)'] }"
      }
    },
    "table": {
      "container": {
        "border": "effects.border_styles.light.base",
        "borderRadius": "lg",
        "overflow": "auto",
        "background": "transparent",
        "backdropFilter": "blur(18px)",
        "shadow": "none"
      },
      "header": {
        "background": "transparent",
        "border": "none",
        "fontWeight": "medium",
        "backdropFilter": "blur(12px)",
        "buttons": {
          "border": "none - use !border-0 !shadow-none to ensure clean headers",
          "background": "transparent",
          "hover": "hover:bg-muted/50 for subtle interaction feedback"
        },
        "note": "Table headers should be clean without borders - buttons use ghost variant with forced border removal"
      },
      "row": {
        "borderBottom": "divide-y divide-[var(--glass-border-soft)]",
        "hover": {
          "background": "hover:bg-[oklch(1_0_0_/_0.18)]",
          "transition": "transition-colors"
        }
      },
      "cell": {
        "padding": "8px (p-2)",
        "fontSize": "sm",
        "whiteSpace": "whitespace-nowrap",
        "backdropFilter": "blur(12px)"
      },
      "implementation": {
        "library": "TanStack Table v8",
        "features": ["Sorting", "Filtering", "Pagination", "Column resizing", "Column reordering", "Row selection", "Export (CSV/Excel)"],
        "components": {
          "DataTable": "src/components/ui/data-table/DataTable.tsx",
          "DataTableHeader": "src/components/ui/data-table/DataTableHeader.tsx - use !border-0 !shadow-none on buttons",
          "DataTableToolbar": "src/components/ui/data-table/DataTableToolbar.tsx",
          "DataTablePagination": "src/components/ui/data-table/DataTablePagination.tsx"
        },
        "styling_requirements": {
          "header_buttons": "Must use !border-0 !shadow-none to remove all borders and shadows",
          "sort_indicators": "ArrowUp, ArrowDown, ArrowUpDown icons from lucide-react",
          "drag_handles": "GripVertical icon with text-muted-foreground/50",
          "actions_column": "Always last, non-movable, non-resizable"
        }
      }
    },
    "avatar_upload": {
      "component": "src/components/users/AvatarUpload.tsx",
      "library": "react-image-crop v11.0.10",
      "features": ["File upload with validation (JPG/PNG, max 10MB)", "Circular crop with 1:1 aspect ratio", "Preview panel showing cropped result", "Image resizing to 150x150px", "Base64 storage in Firestore profilePicture field"],
      "styling": {
        "modal": "Dialog with max-w-2xl",
        "crop_area": "flex-1 with ReactCrop component",
        "preview": "w-24 h-24 circular Avatar component",
        "buttons": "outline variant for Cancel, default variant for Save"
      },
      "validation": {
        "file_types": "image/jpeg, image/jpg, image/png",
        "max_size": "10MB (10 * 1024 * 1024 bytes)",
        "output_size": "150x150 pixels",
        "quality": "0.7 JPEG compression"
      },
      "usage": "Settings page profile picture upload - replaces old ProfilePictureUpload component"
    },
    "badge": {
      "base": {
        "borderRadius": "full",
        "padding": "2px 10px",
        "fontSize": "xs",
        "fontWeight": "medium",
        "backdropFilter": "blur(10px)",
        "border": "effects.border_styles.light.base",
